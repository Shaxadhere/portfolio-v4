---
import { SOURCE } from "../constants/source.constants";
---

<header class="flex items-center justify-between px-6 py-4 bg-white shadow">
  <div class="flex items-center space-x-4">
    <div class="w-8 h-8 bg-red-600 rounded-full"></div>
    <div class="relative">
      <span class="absolute inset-y-0 left-0 flex items-center pl-3">
        <svg
          class="w-5 h-5 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </span>
      <input
        type="text"
        placeholder="Search..."
        class="pl-10 pr-4 py-2 w-64 rounded-md bg-gray-100 focus:outline-none"
      />
    </div>
  </div>
  <nav class="flex items-center space-x-6">
    <a href={SOURCE.DEPLOY} class="text-gray-500 hover:text-gray-700"
      ><img src="https://vercel.com/button" alt="Vercel" /></a
    >
  </nav>
</header>
