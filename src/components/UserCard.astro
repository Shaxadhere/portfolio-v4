---
import { INFO } from "../constants/info.constants";
---

<div class="flex flex-col items-center mb-6">
  <div class="relative mb-4">
    <img
      src="/shehzad-ahmed.jpg"
      alt={INFO.NAME}
      class="w-32 h-32 rounded-md object-cover"
    />
    <div class="absolute top-2 right-2 bg-white p-1 rounded-md shadow">
      <svg
        class="w-4 h-4 text-gray-500"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
        ></path>
      </svg>
    </div>
  </div>
  <h1 class="text-2xl font-bold">{INFO.NAME}</h1>
  <p class="text-gray-500 mb-2">@{INFO.USERNAME}</p>
  <p class="text-center text-sm text-gray-600 mb-4">
    {INFO.DESCRIPTION}
  </p>
  <div class="flex space-x-4 mb-4">
    <a href="#" class="text-gray-500 hover:text-gray-700">
      <i class="fab fa-twitter"></i>
    </a>
    <a href="#" class="text-gray-500 hover:text-gray-700">
      <i class="fab fa-instagram"></i>
    </a>
    <a href="#" class="text-gray-500 hover:text-gray-700">
      <i class="fab fa-facebook"></i>
    </a>
  </div>
  <button
    class="w-full bg-black text-white py-2 px-4 rounded-md hover:bg-gray-800 transition"
    >Follow</button
  >
</div>
